<ol class="breadcrumb">
  <li class="breadcrumb-item">
    <a href="/admin/home">{{l10n "Home"}}</a>
  </li>
  <li class="breadcrumb-item">
    <a href="/admin/sticker/list">{{l10n "Sticker Management"}}</a>
  </li>
  <li class="active">{{l10n "Delete"}}</li>
</ol>

<header class="header bg-ui-general">
  <div class="header-info">
    <h1 class="header-title">
      {{l10n "Delete Sticker Collection"}}
      <small> {{formValues.name}} </small>
    </h1>
  </div>
</header>

<hr> {{> alertMessage }}

<div class="row">

  <div class="col-12">

    <div class="card">

      <div class="card-body">

        <form method="post" action="/admin/sticker/delete/{{formValues._id}}" enctype="multipart/form-data">
          <input type="hidden" name="_id" class="form-control" id="input1" value="{{formValues._id}}">

          <div class="form-group">
            <label for="input1">{{l10n "Sticker Collection Name"}}</label>
            <input type="text" disabled="disabled" name="name" class="form-control" id="text1" placeholder="{{l10n "Name"}}" value="{{formValues.name}}">
          </div>

          <div class="form-group">
            <label for="sortName">{{l10n "Sort Sticker Collection Name"}}</label>
            <input type="text" disabled="disabled" name="sortName" class="form-control" id="sortName" placeholder="{{l10n "Sort Name"}}"
              value="{{formValues.sortName}}">
            <p class="help-block">{{l10n "This name will be used for sorting data."}}</p>
          </div>

          <div class="form-group">
            <label for="input2">{{l10n "Description"}}</label>
            <textarea rows="4" disabled="disabled" name="description" class="form-control" placeholder="{{l10n "Description"}}">{{formValues.description}}</textarea>
          </div>

          <div class="form-group">

            <label for="input3">{{l10n "Files"}}</label>

            <div class="row">

              {{#each formValues.pictures}}
                <div class="col-md-6 col-lg-4">

                  <div class="card {{#if main}} card-inverse card-primary {{/if}}">

                    <header class="card-header">
                      {{picture.originalName}}
                    </header>

                    <div class="card-body text-center">

                      <p>
                        <img class="img-fluid" src="/admin/file/{{picture.nameOnServer}}" />
                      </p>

                    </div>


                  </div>

                </div>
              {{/each}}

            </div>

          </div>

          <button type="submit" class="btn btn-label btn-danger pull-right">
            <label>
              <i class="fa fa-times"></i>
            </label> {{l10n "Delete"}}
          </button>

        </form>

      </div>

    </div>

  </div>

</div>
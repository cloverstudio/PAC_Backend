<ol class="breadcrumb">
  <li class="breadcrumb-item">
    <a href="/admin/home">{{l10n "Home"}}</a>
  </li>
  <li class="breadcrumb-item">
    <a href="/admin/user/list">{{l10n "User Management"}}</a>
  </li>
  <li class="breadcrumb-item active">{{l10n "Delete"}}</li>
</ol>

<header class="header bg-ui-general">
  <div class="header-info">
    <h1 class="header-title">
      {{l10n "Delete User"}}
      <small>{{formValues.name}}</small>
    </h1>
  </div>
</header>

{{> alertMessage }}

<div class="row">

  <div class="col-12">

    <div class="card">

      <div class="card-body">

        <form method="post" action="/admin/user/delete/{{formValues._id}}">

          <input type="hidden" name="_id" class="form-control" id="input1" value="{{formValues._id}}">

          <div class="form-group">
            <label for="input1">{{l10n "User Name"}}</label>
            <input disabled="dieabled" type="text" name="name" class="form-control" id="input1" placeholder="{{l10n "Name"}}" value="{{formValues.name}}">
          </div>

          <div class="form-group">
            <label for="sortName">{{l10n "Sort User Name"}}</label>
            <input disabled="dieabled" type="text" name="sortName" class="form-control" id="sortName" placeholder="{{l10n "Sort Name"}}"
              value="{{formValues.sortName}}">
            <p class="help-block">{{l10n "This name will be used for sorting data."}}</p>
          </div>

          <div class="form-group">
            <label for="input2">{{l10n "Description"}}</label>
            <textarea disabled="dieabled" rows="4" name="description" class="form-control" placeholder="{{l10n "Description"}}">{{formValues.description}}</textarea>
          </div>

          <div class="form-group">
            <label for="input3">{{l10n "User ID"}}</label>
            <input disabled="dieabled" type="text" name="userid" class="form-control" id="input2" placeholder="{{l10n "User ID"}}" value="{{formValues.userid}}">
            <p class="help-block">{{l10n "User alphabet and numbers only. Must be more than 6 characters."}}</p>
          </div>

          <div class="form-group">
            <label for="input4">{{l10n "Password"}}</label>
            <input disabled="dieabled" type="password" name="password" class="form-control" id="input3" placeholder="{{l10n "Password"}}"
              value="{{formValues.password}}">
            <p class="help-block">{{l10n "Please keep password empty in case you dont want change."}}</p>
          </div>

          <div class="form-group">
            <label for="input5">{{l10n "Status"}}</label>
            <br />

            <label class="custom-control custom-radio">
              <input disabled="dieabled" type="radio" class="custom-control-input" name="status" value="1" {{{checkedIfEqual formValues.status 1}}} />
                  <span class="custom-control-indicator"></span>
                  <span class="custom-control-description">{{l10n "Enabled"}}</span>
                </label>
  
                <label class="custom-control custom-radio">
                  <input disabled="dieabled"  type="radio" class="custom-control-input" name="status" value="0" {{{checkedIfEqual formValues.status 0}}} />
                  <span class="custom-control-indicator"></span>
                  <span class="custom-control-description">{{l10n "Disabled"}}</span>
                </label>
  
                  </div>
  
                  {{#if formValues.groupList}}
                    <div class="form-check form-check-inline">
                      <label for="input6">{{l10n "Groups"}}</label>
                      <br/>
  
                      {{#each formValues.groupList}}
                              
                        <div class="form-check form-check-inline">
                          <label class="custom-control custom-checkbox">
                            <input disabled="dieabled"  class="custom-control-input" type="checkbox" name="groups" value="{{_id}}" {{{checkIfExisted ../formValues.groups _id}}}>
                            <span class="custom-control-indicator"></span>
                            <span class="custom-control-description">{{name}} </span>
                          </label>
                        </div>
  
                      {{/each}}
  
                    </div>
                  {{/if}}
                  
                  {{#if formValues.departmentList}}
                    <div class="form-check form-check-inline">
                      <label for="input6">{{l10n "Departments"}}</label>
                      <br/>
  
                      {{#each formValues.departmentList}}
  
                        <div class="form-check form-check-inline">
                          <label class="custom-control custom-checkbox">
                            <input disabled="dieabled"  class="chk-departments custom-control-input" type="checkbox" name="groups" value="{{_id}}" {{{checkIfExisted ../formValues.groups _id}}}>
                            <span class="custom-control-indicator"></span>
                            <span class="custom-control-description">{{name}} </span>
                          </label>
                        </div>
  
                      {{/each}}
  
                    </div>
  
                  {{/if}}    
  
                  {{#if formValues.showPermission}}
                    <div class="form-group">
                      <label for="input7">{{l10n "Permission"}}</label>
                      <br/>
   
                      <label class="custom-control custom-radio">
                        <input disabled="dieabled"  type="radio" class="custom-control-input" name="permission" value="1" {{{checkedIfEqual formValues.permission 1}}} />
                        <span class="custom-control-indicator"></span>
                        <span class="custom-control-description">{{l10n "Web Client"}}</span>
                      </label>
  
                      <label class="custom-control custom-radio">
                        <input disabled="dieabled"  type="radio" class="custom-control-input" name="permission" value="3" {{{checkedIfEqual formValues.permission 3}}} />
                        <span class="custom-control-indicator"></span>
                        <span class="custom-control-description">{{l10n "Sub-Admin"}}</span>
                      </label>
                    </div>
                  {{/if}}
                  
                  {{#if organizationAdmin}}
  
                  <div class="row">
  
                    <div class="col-md-6">
                    
                      <div class="form-group">
  
                        <label for="input3">{{l10n "Avatar"}}</label><br/>
  
                        {{#if formValues.avatar.thumbnail.nameOnServer}}
  
                          <div class="card">
  
                            <header class="card-header">
                              <h6 class="card-title card-title-bold">{{l10n "Uploaded Image"}}</h6>
                            </header>
            
                            <div class="card-body text-center">
                              <img class="img-fluid rounded" src="/admin/file/{{formValues.avatar.thumbnail.nameOnServer}}" />
                            </div>
                            
                          </div>
  
                        {{/if}}
  
                      </div>
                      
                    </div>
  
                  </div>
                  
                  {{/if}}
  
                  <button type="submit" class="btn btn-label btn-primary pull-right">
                      <label><i class="fa fa-times"></i></label> {{l10n "Delete"}}
                  </button>
  
                </form>
  
              </div>
  
          </div>
  
      </div>
  
   </div>